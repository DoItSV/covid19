<header class="welcome">
  <div class="welcome__logo">
    <%= image_tag "dentrense_white.svg" %>
  </div>
  <h1 class="welcome__title">Preguntas Frecuentes</h1>
</header>

<main class="container container--white container--with-padding">
  <div class="info">
    <% @questions.each do |question| %>
      <h3 class="info__heading"><%= question.question %></h3>
      <p class="info__text">
        <%= question.answer %>
      </p>
    <% end %>
  </div>
  <div class="divider"></div>
  <ul class="links">
    <li><a href="<%= url_for root_path %>">Inicio</a></li>
